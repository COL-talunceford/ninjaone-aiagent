# ==========================
# REGION / API HOSTS (US2)
# ==========================
NINJA_BASE_URL=https://us2.ninjarmm.com
NINJA_AUTH_URL=https://us2.ninjarmm.com/oauth/token

# ==========================
# NINJAONE OAUTH
# ==========================
# ---- TEST SANDBOX (comment in for TEST) ----
# NINJA_CLIENT_ID=your-test-client-id
# NINJA_CLIENT_SECRET=your-test-client-secret

# ---- PRODUCTION (use in PROD) ----
NINJA_CLIENT_ID=your-prod-client-id
NINJA_CLIENT_SECRET=your-prod-client-secret

NINJA_SCOPE=public-api

# Optional: Webhook signing shared secret (leave blank if not used)
NINJA_WEBHOOK_SECRET=change-me-long-random-string

# ==========================
# OPENAI / CHATGPT
# ==========================
# ---- TEST ----
OPENAI_API_KEY=sk-your-test-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_OUTPUT_TOKENS=800

# ---- PROD (uncomment if you upgrade) ----
# OPENAI_MODEL=gpt-4o

# ==========================
# AGENT BEHAVIOR
# ==========================
# Only auto-run runbooks marked "low" when true.
AGENT_ALLOW_AUTOFIX=false
LOG_LEVEL=info

# ==========================
# PERSISTENCE
# ==========================
# TEST:
AGENT_DB_PATH=agent_state.sqlite3
# PROD:
# AGENT_DB_PATH=/var/lib/ninjaone-agent/state.sqlite3

